<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.androweb.application"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="17"
		android:targetSdkVersion="29"/>

	<uses-permission
		android:name="android.permission.INTERNET"/>

	<uses-permission
		android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<uses-permission
		android:name="android.permission.ACCESS_FINE_LOCATION"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		android:resizeableActivity="true">

		<activity
			android:name="com.androweb.application.ApplicationActivity"
			android:theme="@style/AppTheme.NoActionBar"
			android:launchMode="singleTask"
			android:screenOrientation="portrait">

			<intent-filter>

				<action
					android:name="android.intent.action.MAIN"/>

				<category
					android:name="android.intent.category.LAUNCHER"/>

			</intent-filter>

		</activity>

		<activity
			android:name="com.androweb.application.engine.app.gallery.GalleryActivity"
			android:theme="@style/AppTheme.NoActionBar"
			android:screenOrientation="portrait">

			<intent-filter>

				<action
					android:name="android.intent.action.MAIN"/>

				<category
					android:name="android.intent.category.DEFAULT"/>

			</intent-filter>

		</activity>

		<activity
			android:name="com.androweb.application.engine.app.chrome.ChromeActivity"
			android:theme="@style/AppTheme.NoActionBar">

			<intent-filter>

				<action
					android:name="android.intent.action.MAIN"/>

				<category
					android:name="android.intent.category.DEFAULT"/>

			</intent-filter>

		</activity>

		<activity
			android:name="com.androweb.application.engine.app.chrome.BrowserActivity"
			android:theme="@style/AppTheme.NoActionBar"/>

	</application>

</manifest>

